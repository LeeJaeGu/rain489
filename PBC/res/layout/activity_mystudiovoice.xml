<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    >
<!-- 1/13 halo2nd leejaegu background image변경 -->

    <!-- action bar custom -->
    <ListView
        android:id="@+id/voicelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        />
    <!-- 2015.1.22 leejaegu 삭제기능 추가[[ -->
    <LinearLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
       	android:background="#00ffffff"
       	>
		<CheckBox 
		    android:id="@+id/select"
		    android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:checked="false"
	        android:button="@null"
	        android:text="@string/select"
	        android:textColor="#fff"
	        android:layout_marginLeft="15dp"
	        android:layout_weight="1"
		    />
		<ImageView
		    android:id="@+id/share"
		    android:layout_width="0dp"
	        android:layout_height="20dp"
	        android:visibility="invisible"
	        android:layout_weight="1"
	        android:src="@drawable/btn_mystudio_share"
	        android:layout_gravity="center_vertical"
		    />
		<CheckBox
		    android:id="@+id/all"
		    android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:visibility="invisible"
	        android:button="@drawable/btn_mystudio_all"
	        android:layout_weight="1"
		    />
		<ImageButton
		    android:id="@+id/delete"
		    android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:visibility="invisible"
	        android:layout_gravity="right"
	        android:src="@drawable/btn_mystudio_delete"
	        android:background="@null"
	        android:layout_weight="1"
		    />
	</LinearLayout>
	<!-- ]] -->
</RelativeLayout>